{% extends 'base.html.twig' %}

{% block title %}Rick and Morty{% endblock %}

{% block body %}
<main>

<h2 class="text-center my-5"> Total Episodes : {{ episodes.getTotalItemCount }} </h2>

  <div class="card border-light container-sm p-5">
  <table class="table table-hover">
    <thead>
      <tr class="text-primary">
        <th scope="col">Episode</th>
        <th scope="col">Titre</th>
        <th scope="col">Air Date</th>
      </tr>
    </thead>
    <tbody>
  {% for episode in episodes %}
      <tr>
        <th scope="row">{{episode.episode}}</th>
        <td>{{episode.name}}</td>
        <td>{{episode.airDate}}</td>
      </tr>
  {% endfor %}
    </tbody>
  </table>
  </div>

  <nav class="d-flex justify-content-center mt-5 mb-3">
    <ul class="pagination">
      <li class="page-item">
        {{ knp_pagination_render(episodes) }}
      </li>
    </ul>
  </nav>

</main>
{% endblock %}