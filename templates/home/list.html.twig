{% extends 'base.html.twig' %}

{% block title %}Rick et Morty{% endblock %}

{% block body %}

{% block header %} {% endblock %}

<main>
<h2 class="text-center my-3"> Total Persons : {{ persons.getTotalItemCount }} </h2>

<section class="d-flex justify-content-center flex-wrap">
{% for person in persons %}
  <div class="card border-light text-center mx-2 my-2 col-sm-4 col-lg-2 col-xl-2">
    <h4 class="my-2">{{person.name}}</h4>
      <img class="card-img-top" src="{{ person.image }}" alt="{{ person.name }}">
    <div class="mt-3">
      <p class="lead">Status : <small class="text-secondary">{{person.status}}</small></p>
      <p class="lead">Species : <small class="text-secondary">{{person.species}}</small></p>
      <p class="lead">Genre : <small class="text-secondary">{{person.gender}}</small></p>
      {% if person.type == true %}
        <p class="lead">Type : <small class="text-secondary">{{person.type}}</small></p>
      {% else %}
        <p class="lead">Type : <small class="text-secondary">unknown</small></p>
      {% endif %}
    </div>
    <button type="button" class="btn btn-light btn-sm">Voir</button>
  </div>
{% endfor %}

<nav class="mt-5 mb-3">
  <ul class="pagination">
    <li class="page-item">
      {{ knp_pagination_render(persons) }}
    </li>
  </ul>
</nav>


</section>
</main>

{% endblock %}